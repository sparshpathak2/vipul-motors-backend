generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Query {
  id        String   @id
  name      String
  email     String?
  mobile    String
  location  String
  message   String?
  source    String
  createdAt DateTime @default(now())
}

model Image {
  id        String   @id
  url       String
  alt       String?
  createdAt DateTime @default(now())

  // Relations
  banner         Banner?         @relation("BannerImage")
  trueValueModel TrueValueModel? @relation("TrueValueModelImage")
}

model Banner {
  id     String  @id
  screen String?
  order  Int?
  // isActive Boolean @default(true)

  // Relation
  image   Image?  @relation("BannerImage", fields: [imageId], references: [id])
  imageId String? @unique
}

model TrueValueModel {
  id          String   @id
  modelName   String
  description String?
  make        String?
  year        Int?
  variant     String?
  color       String?
  createdAt   DateTime @default(now())

  // Relation
  image   Image?  @relation("TrueValueModelImage", fields: [imageId], references: [id])
  imageId String? @unique
}
